<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price History"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/product_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/current_price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Price: $0.00"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/average_price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30-day avg: $0.00"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/highest_price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Highest: $0.00"
        android:textSize="16sp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/lowest_price_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lowest: $0.00"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price History Chart"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <View
        android:id="@+id/chart_placeholder"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorSecondary"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Price Reports"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/price_history_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

</LinearLayout>
